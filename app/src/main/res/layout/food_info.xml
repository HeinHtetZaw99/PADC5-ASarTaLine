<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding_small"
    android:layout_marginTop="@dimen/padding_small"
    android:background="@drawable/rating_view"

    android:padding="@dimen/padding_small">

    <LinearLayout
        android:id="@+id/taste"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_medium"
        android:orientation="horizontal"
        android:paddingStart="@dimen/padding_medium"
        android:weightSum="3">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/taste"
            android:textColor="@color/colorBlack"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:lineSpacingMultiplier="1.2"
            android:padding="@dimen/padding_small"
            android:text="@string/lorem"
            android:textSize="20sp"
            android:textStyle="normal" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tasteDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/taste"
        android:layout_marginTop="@dimen/padding_medium"
        android:orientation="horizontal"
        android:paddingStart="@dimen/padding_medium"
        android:weightSum="3">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Taste Desc"
            android:textColor="@color/colorBlack"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:padding="@dimen/padding_small"
            android:text="@string/lorem"
            android:textSize="20sp"
            android:textStyle="normal" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/suitedItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tasteDesc"
        android:layout_marginTop="@dimen/padding_medium"
        android:orientation="horizontal"
        android:paddingStart="@dimen/padding_medium"
        android:weightSum="3">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Suites With"
            android:textColor="@color/colorBlack"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:padding="@dimen/padding_small"
            android:text="@string/lorem"
            android:textSize="20sp"
            android:textStyle="normal" />

    </LinearLayout>


</RelativeLayout>
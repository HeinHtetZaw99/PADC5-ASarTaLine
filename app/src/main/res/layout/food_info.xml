<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding_small"
    android:layout_marginTop="@dimen/padding_small"
    android:background="@drawable/rating_view"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/padding_small">

    <LinearLayout
        android:id="@+id/taste"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_medium"
        android:orientation="vertical"
        android:paddingStart="@dimen/padding_medium">

        <org.mmtextview.components.MMTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/taste"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:textStyle="bold" />

        <org.mmtextview.components.MMTextView
            android:id="@+id/food_details_taste"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:lineSpacingMultiplier="1.2"
            android:padding="@dimen/padding_small"
            android:textSize="18sp"
            tools:text="@string/lorem"
            android:textStyle="normal" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tasteDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/taste"
        android:layout_marginTop="@dimen/padding_medium"
        android:orientation="vertical"
        android:paddingStart="@dimen/padding_medium">

        <org.mmtextview.components.MMTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Taste Desc"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:textStyle="bold" />

        <org.mmtextview.components.MMTextView
            android:id="@+id/food_details_taste_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_small"
            android:textSize="18sp"
            tools:text="@string/lorem"
            android:textStyle="normal" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/suitedItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tasteDesc"
        android:layout_marginTop="@dimen/padding_medium"
        android:orientation="vertical"
        android:paddingStart="@dimen/padding_medium">

        <org.mmtextview.components.MMTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Suites With"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:textStyle="bold" />

        <org.mmtextview.components.MMTextView
            android:id="@+id/food_details_suited"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_small"
            android:textSize="18sp"
            tools:text="@string/lorem"
            android:textStyle="normal" />

    </LinearLayout>


</RelativeLayout>